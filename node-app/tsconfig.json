{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",

        "sourceMap": true,
        "declaration": true,

        "moduleResolution": "Node",

        "strict": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": true,
        "lib": []
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules"
    ]
}